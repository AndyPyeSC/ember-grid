{{! eg-render/eg-body ~}}
{{#if requiredPresent}}
  {{#ember-collection 
      items=attrs.data height=attrs.height width=attrs.width buffer=20
      cell-layout=(fixed-grid-layout attrs.width attrs.rowHeight)
      sliceDidChange=(action "scrollSource")
      class="body-collection"
      as |row rowIndex|
      }}
    {{eg-render/eg-body-row 
      rowIndex=rowIndex columns=columns rowHeight=attrs.rowHeight}}
  {{/ember-collection}}
{{/if}}
